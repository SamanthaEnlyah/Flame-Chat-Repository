<Window x:Class="FlameChatAdmin.GUI.AdminOperations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlameChatAdmin.GUI"
        mc:Ignorable="d"
        Title="AdminOperations" Height="578" Width="800" Loaded="Window_Loaded" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
    <Grid HorizontalAlignment="Left">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="143*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtTrait" HorizontalAlignment="Left" Margin="19,49,0,0" TextWrapping="Wrap" Text="Add trait..." VerticalAlignment="Top" Width="217" Height="31" Grid.ColumnSpan="2" VerticalContentAlignment="Center" ToolTip="Add user trait here so that users can choose their traits from the list"/>
        <Button x:Name="BtnAddTrait" Content="Add trait" Margin="21,92,144,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="26" Click="BtnAddTrait_Click" HorizontalContentAlignment="Center" Padding="20,1,1,1" Grid.ColumnSpan="2">
            <Button.Background>
                <ImageBrush ImageSource="/GUI/icons8-add-100.png" Stretch="Uniform">
                    <ImageBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                            <RotateTransform CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform X="-0.35"/>
                        </TransformGroup>
                    </ImageBrush.RelativeTransform>
                </ImageBrush>
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.158"/>
                    <RotateTransform Angle="0.339"/>
                    <TranslateTransform X="-0.036" Y="-0.001"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label Content="Personality Traits:" HorizontalAlignment="Left" Margin="19,18,0,0" VerticalAlignment="Top" Width="230" Grid.ColumnSpan="2"/>
        <ListBox x:Name="listOfTraits" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="19,131,18,101" Grid.ColumnSpan="2"/>
        <Button x:Name="BtnSaveChanges" Content="Save Changes" HorizontalAlignment="Left" Margin="19,517,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="88" Height="25"/>
        <Button x:Name="BtnDeleteTrait" Content="" HorizontalAlignment="Left" Height="27" Margin="52,474,0,0" VerticalAlignment="Top" Width="26" SnapsToDevicePixels="True" Grid.Column="1" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/GUI/icons8-x-100.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnEditTrait" Content="" HorizontalAlignment="Left" Height="27" Margin="102,474,0,0" VerticalAlignment="Top" Width="26" RenderTransformOrigin="2.705,0.129" Grid.Column="1" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/GUI/icons8-edit-100.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnAddFile" Content="" HorizontalAlignment="Left" Margin="19,464,0,0" VerticalAlignment="Top" Height="38" Width="44" BorderBrush="{x:Null}" ToolTip="Add list of traits from file" Click="BtnAddFile_Click">
            <Button.Background>
                <ImageBrush ImageSource="/GUI/add file.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
