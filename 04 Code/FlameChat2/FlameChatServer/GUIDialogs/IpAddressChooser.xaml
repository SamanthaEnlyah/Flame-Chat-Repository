<Window x:Class="FlameChatAdmin.GUIDialogs.IpAddressChooser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlameChatAdmin.GUIDialogs"
        mc:Ignorable="d"
        Title="IpAddressChooser" Height="400" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-6">
        <ListBox x:Name="listIPs" d:ItemsSource="{d:SampleData ItemCount=5}" Height="169" VerticalAlignment="Top" HorizontalAlignment="Center" Width="732" Margin="0,145,0,0" FontSize="16"/>
        <Button x:Name="BtnChooseIP" Content="OK" HorizontalAlignment="Left" Margin="34,319,0,0" VerticalAlignment="Top" Height="32" Width="107" Click="BtnChooseIP_Click" FontSize="16"/>
        <Label Content="Choose IP address where Server will start:" HorizontalAlignment="Left" Height="38" Margin="31,90,0,0" VerticalAlignment="Top" Width="348" FontSize="16"/>
        <Label Content="SQL Server Instance ID (Default is SQLEXPRESS. Please change if needed):" HorizontalAlignment="Center" Height="36" Margin="0,10,0,0" VerticalAlignment="Top" Width="732" FontSize="16"/>
        <TextBox x:Name="txtSqlExpressInstance" HorizontalAlignment="Center" Height="34" Margin="0,51,0,0" TextWrapping="Wrap" Text="SQLEXPRESS" VerticalAlignment="Top" Width="732" FontSize="16"/>

    </Grid>
</Window>
