<Window x:Name="ServerWindow" x:Class="FlameChatAdmin.ServerMessages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlameChatAdmin"
        mc:Ignorable="d"
        Title="Server Messages" Height="362" Width="683" Loaded="Window_Loaded" Closed="ServerWindow_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="673*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="servermessages" HorizontalAlignment="Center" Height="283" Margin="0,15,0,0" VerticalAlignment="Top" Width="630" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Image x:Name="db_test_image" HorizontalAlignment="Left" Height="65" Margin="91,10,0,0" VerticalAlignment="Top" Width="462" Grid.Column="1"/>

    </Grid>
</Window>
