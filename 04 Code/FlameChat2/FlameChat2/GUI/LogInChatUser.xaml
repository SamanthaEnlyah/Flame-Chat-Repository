<Window x:Class="FlameChatClient.GUI.LogInChatUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlameChatClient.GUI"
        mc:Ignorable="d"
        Title="Log In" Height="319" Width="480" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="32*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txt_username" HorizontalAlignment="Left" Margin="28,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="353"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="28,36,0,0" VerticalAlignment="Top" Width="98"/>
        <TextBox x:Name="txt_password" HorizontalAlignment="Left" Margin="28,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="353"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="28,119,0,0" VerticalAlignment="Top" Width="98"/>
        <Button x:Name="btn_login_now" Content="Log In" HorizontalAlignment="Left" Margin="28,204,0,0" VerticalAlignment="Top" Height="47" Width="84" Click="btn_login_now_Click" Grid.RowSpan="2"/>

    </Grid>
</Window>
