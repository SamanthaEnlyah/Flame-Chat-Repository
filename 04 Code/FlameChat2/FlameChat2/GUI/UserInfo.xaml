<Window x:Class="FlameChatClient.GUI.UserInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlameChatClient.GUI"
        mc:Ignorable="d"
        Title="Profile" Height="801" Width="1037" Closing="Window_Closing" Loaded="Window_Loaded">

    <Grid Margin="18,2,10,-6">

        <Image x:Name="loggedin_user_image" HorizontalAlignment="Left" Height="238" Margin="26,61,0,0" VerticalAlignment="Top" Width="258"/>
