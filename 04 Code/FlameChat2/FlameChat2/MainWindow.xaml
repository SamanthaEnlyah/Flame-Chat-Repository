<Window x:Class="FlameChat2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlameChat2"
        mc:Ignorable="d"
        Title="Flame Chat Client Log In/Sign up" Height="120" Width="324" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="btn_login" Content="Log In" HorizontalAlignment="Left" Height="45" Margin="32,25,0,0" VerticalAlignment="Top" Width="112" Click="btn_login_Click"/>
        <Button x:Name="btn_signup" Content="Sign Up" HorizontalAlignment="Left" Height="45" Margin="149,25,0,0" VerticalAlignment="Top" Width="105" Click="Button_Click"/>

    </Grid>
</Window>
